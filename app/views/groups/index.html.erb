<div class="col-md-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>標題</td>
        <td>內容</td>
      </tr>
    </thead>
    <tbody>
    <div class="text-right">
    <%= link_to("開新聯誼",new_group_path,:class=>"btn btn-primary") %>
    </div>
      <% @groups.each do |s| %>
        <tr>
          <td>#</td>
          <td><%= link_to(truncate(s.title), s) %></td>
          <td><%= s.description %></td>
          <td>
            <% if current_user && s.editable_by?(current_user) %>
              <%= link_to("修改", edit_group_path(s), class: "btn btn-sm btn-default")%>
              <%= link_to("刪除", group_path(s),class: "btn btn-sm btn-default", method: :delete, data: { confirm: "Are you sure?" } )%>
            <% end %>        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>